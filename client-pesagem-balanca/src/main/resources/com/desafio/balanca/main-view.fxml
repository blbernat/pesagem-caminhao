<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.desafio.balanca.controller.MainController"
            prefHeight="700.0" prefWidth="900.0">
    
    <!-- Header -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Text text="Simulador de Balança EPS32"
                  style="-fx-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
            <Text text="Sistema de Pesagem de Caminhões" 
                  style="-fx-fill: #ecf0f1; -fx-font-size: 14;"/>
        </VBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            
            <!-- Configuration Panel -->
            <VBox spacing="10" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 15; -fx-background-color: #ecf0f1;">
                <Text text="Configuração" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120"/>
                        <ColumnConstraints minWidth="200" prefWidth="200" hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <Label text="ID da Balança:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="scaleIdField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Placa do Caminhão:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="plateField" promptText="Ex: ABC1D34" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Peso Alvo (kg):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="targetWeightField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="URL do Servidor:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="serverUrlField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>
            </VBox>
            
            <!-- Weight Display -->
            <VBox spacing="10" alignment="CENTER" style="-fx-border-color: #3498db; -fx-border-width: 2; -fx-padding: 30; -fx-background-color: #ecf0f1;">
                <Text text="PESO ATUAL" style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
                <Text fx:id="currentWeightText" text="0.00 kg" style="-fx-font-size: 48; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
                
                <HBox spacing="10" alignment="CENTER">
                    <Text fx:id="statusText" text="AGUARDANDO" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-fill: #95a5a6;"/>
                    <ProgressIndicator fx:id="progressIndicator" prefWidth="30" prefHeight="30" visible="false"/>
                </HBox>
            </VBox>
            
            <!-- Control Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="startButton" text="Iniciar Pesagem" onAction="#handleStart" 
                        style="-fx-font-size: 14; -fx-padding: 10 20;" prefWidth="150"/>
                <Button fx:id="stopButton" text="Parar" onAction="#handleStop" 
                        style="-fx-font-size: 14; -fx-padding: 10 20;" prefWidth="150"/>
                <Button fx:id="resetButton" text="Resetar" onAction="#handleReset" 
                        style="-fx-font-size: 14; -fx-padding: 10 20;" prefWidth="150"/>
            </HBox>
            
            <!-- Log Area -->
            <VBox spacing="5">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Text text="Log de Atividades" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                    <Button text="Limpar" onAction="#handleClearLog" style="-fx-font-size: 11;"/>
                </HBox>
                <TextArea fx:id="logArea" prefHeight="150" editable="false" 
                          style="-fx-font-family: 'Courier New'; -fx-font-size: 11;"/>
            </VBox>
        </VBox>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <Label fx:id="failedRecordsLabel" text="Registros não enviados: 0" 
                   style="-fx-text-fill: white; -fx-font-size: 12;"/>
        </HBox>
    </bottom>
    
</BorderPane>
